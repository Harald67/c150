<?xml version="1.0" encoding="UTF-8"?>

<!-- Author : Syd Adams
     Hobbs flight meter -->
<PropertyList>

  <path>hobbs.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>Fmeter1</object-name>
    <object-name>Fmeter2</object-name>
    <object-name>Fmeter3</object-name>
    <object-name>Fmeter4</object-name>
    <object-name>Fmeter5</object-name>
  </animation>

    <effect>
        <inherits-from>Aircraft/c150/Models/Effects/interior/flashlight</inherits-from>
        <object-name>fond</object-name>
    </effect>



    <animation>
        <type>material</type>
        <object-name>Fmeter1</object-name>
        <object-name>Fmeter2</object-name>
        <object-name>Fmeter3</object-name>
        <object-name>Fmeter4</object-name>
        <object-name>Fmeter5</object-name>
        <emission>
            <red>1.000</red>
            <green>0.20</green>
            <blue>0.000</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>


  <!-- Flight Meter-->
  <animation>
    <type>textranslate</type>
    <object-name>Fmeter1</object-name>
    <property>instrumentation/clock/flight-meter-hour</property>
    <factor>0.0001</factor>
    <step> 1000 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter2</object-name>
    <property>instrumentation/clock/flight-meter-hour</property>
    <factor>0.001</factor>
    <step> 100 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter3</object-name>
    <property>instrumentation/clock/flight-meter-hour</property>
    <factor>0.01</factor>
    <step> 10 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter4</object-name>
    <property>instrumentation/clock/flight-meter-hour</property>
    <factor>0.1</factor>
    <step> 1 </step>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Fmeter5</object-name>
    <property>instrumentation/clock/flight-meter-hour</property>
    <factor>1.0</factor>
    <!--step>0.1</step-->
    <bias> -0.05 </bias>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

